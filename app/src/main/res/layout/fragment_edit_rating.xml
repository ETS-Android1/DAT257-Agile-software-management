<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F0000">

    <TextView
        android:id="@+id/titleRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iceberg"
        android:text="Rating"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265" />

    <TextView
        android:id="@+id/storyRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam"
        android:text="Story:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/characterRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam"
        android:text="Characters:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/movieScoreRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam"
        android:text="Movie Score:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.255" />

    <TextView
        android:id="@+id/sceneryRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam"
        android:text="Scenery:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.331" />

    <TextView
        android:id="@+id/overallRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="Overall Rating:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.407" />

    <TextView
        android:id="@+id/notesRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/be_vietnam"
        android:text="Notes:"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleRating"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRating"
        app:layout_constraintVertical_bias="0.469" />


    <include
        android:id="storyNumberPicker"
        layout="@layout/number_picker_view"
        android:layout_width="120dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="258dp" />

    <include
        android:id="characterNumberPicker"
        layout="@layout/number_picker_view"
        android:layout_width="120dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="297dp" />

    <include
        android:id="scoreNumberPicker"
        layout="@layout/number_picker_view"
        android:layout_width="120dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="339dp" />

    <include
        android:id="sceneryNumberPicker"
        layout="@layout/number_picker_view"
        android:layout_width="120dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="376dp" />

    <include
        android:id="overallRatingNumberPicker"
        layout="@layout/number_picker_view"
        android:layout_width="120dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="413dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="137dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="451dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:hint="note..." />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>