<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F0000">

    <ImageView
        android:id="@+id/poster_detail_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_detail_view"
        android:layout_width="366dp"
        android:layout_height="77dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:inputType="textMultiLine"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/category_detail_view"
        app:layout_constraintTop_toBottomOf="@+id/poster_detail_view" />

    <TextView
        android:id="@+id/rating_movie_with_existing"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/iceberg"
        android:singleLine="true"
        android:text="Rating"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/release_date_detail_view" />

    <TextView
        android:id="@+id/overall_rating_movie_with_existing"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:text="Overall rating:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_movie_with_existing" />

    <TextView
        android:id="@+id/chracters_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="xx"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/charcters_movie_with_existing"
        app:layout_constraintTop_toBottomOf="@+id/overall_rating_value_movie_with_existing" />

    <TextView
        android:id="@+id/movie_score_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="xx"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/movie_score_movie_with_existing"
        app:layout_constraintTop_toBottomOf="@+id/chracters_value_movie_with_existing" />

    <TextView
        android:id="@+id/notes_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="xx"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/overall_rating_movie_with_existing4"
        app:layout_constraintTop_toBottomOf="@+id/movie_score_value_movie_with_existing" />

    <TextView
        android:id="@+id/overall_rating_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:text="6.2"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/overall_rating_movie_with_existing"
        app:layout_constraintTop_toTopOf="@+id/overall_rating_movie_with_existing" />

    <TextView
        android:id="@+id/charcters_movie_with_existing"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Characters: "
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overall_rating_movie_with_existing" />

    <TextView
        android:id="@+id/movie_score_movie_with_existing"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Movie score:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charcters_movie_with_existing" />

    <TextView
        android:id="@+id/scenery_movie_with_existing"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Scenery:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/notes_value_movie_with_existing"
        app:layout_constraintTop_toBottomOf="@+id/story_movie_with_existing2" />

    <TextView
        android:id="@+id/scenery_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="xx"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/scenery_movie_with_existing"
        app:layout_constraintTop_toBottomOf="@+id/story_value_movie_with_existing" />

    <TextView
        android:id="@+id/story_movie_with_existing2"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Story:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/movie_score_value_movie_with_existing"
        app:layout_constraintTop_toBottomOf="@+id/charcters_movie_with_existing" />

    <TextView
        android:id="@+id/story_value_movie_with_existing"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="xx"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/story_movie_with_existing2"
        app:layout_constraintTop_toTopOf="@+id/story_movie_with_existing2" />

    <TextView
        android:id="@+id/overall_rating_movie_with_existing4"
        android:layout_width="146dp"
        android:layout_height="34dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Notes:"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_score_movie_with_existing" />

    <TextView
        android:id="@+id/category_detail_view"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tagbox"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_detail_view" />

    <TextView
        android:id="@+id/release_date_detail_view"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/tagbox"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/category_detail_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/category_detail_view" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:background="#6F0000"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="#6F0000"
        app:layout_constraintBottom_toBottomOf="@+id/release_date_detail_view"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6F0000"
        app:layout_constraintBottom_toBottomOf="@+id/rating_movie_with_existing"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

</androidx.constraintlayout.widget.ConstraintLayout>