<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F0000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/category_detail_view"
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/tagbox"
                    android:fontFamily="@font/be_vietnam_extrabold"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_detail_view" />

                <ImageView
                    android:id="@+id/poster_detail_view"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/overall_rating_value_movie_with_existing"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/be_vietnam_extrabold"
                    android:text="6.2"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/overall_rating_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/release_date_detail_view" />

                <TextView
                    android:id="@+id/notes_value_movie_with_existing"
                    android:layout_width="330dp"
                    android:layout_height="150dp"
                    android:fontFamily="@font/be_vietnam"
                    android:layout_marginLeft="20dp"
                    android:text="xx"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/overall_rating_movie_with_existing4" />

                <TextView
                    android:id="@+id/charcters_movie_with_existing"
                    android:layout_width="146dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Characters: "
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/overall_rating_movie_with_existing" />

                <TextView
                    android:id="@+id/movie_score_movie_with_existing"
                    android:layout_width="146dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Movie score:"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/charcters_movie_with_existing" />

                <TextView
                    android:id="@+id/story_movie_with_existing2"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Story:"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/chracters_value_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/rated_detail_durationTime" />

                <TextView
                    android:id="@+id/overall_rating_movie_with_existing4"
                    android:layout_width="146dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Notes:"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_score_movie_with_existing" />

                <TextView
                    android:id="@+id/rating_movie_with_existing"
                    android:layout_width="130dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/iceberg"
                    android:singleLine="true"
                    android:text="Your Rating"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/category_detail_view" />

                <TextView
                    android:id="@+id/release_date_detail_view"
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/tagbox"
                    android:fontFamily="@font/be_vietnam_extrabold"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/category_detail_view"
                    app:layout_constraintTop_toBottomOf="@+id/title_detail_view" />

                <TextView
                    android:id="@+id/rated_detail_durationTime"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/tagbox"
                    android:fontFamily="@font/be_vietnam_extrabold"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/release_date_detail_view"
                    app:layout_constraintTop_toBottomOf="@+id/title_detail_view" />

                <TextView
                    android:id="@+id/chracters_value_movie_with_existing"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="xx"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/charcters_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/overall_rating_value_movie_with_existing" />

                <TextView
                    android:id="@+id/score_value_movie_with_existing"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="xx"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/movie_score_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/chracters_value_movie_with_existing" />

                <TextView
                    android:id="@+id/scenery_value_movie_with_existing"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="1dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="xx"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/scenery_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/story_value_movie_with_existing" />

                <TextView
                    android:id="@+id/story_value_movie_with_existing"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="xx"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/story_movie_with_existing2"
                    app:layout_constraintTop_toBottomOf="@+id/edit_rating" />

                <TextView
                    android:id="@+id/scenery_movie_with_existing"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="Scenery:"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@+id/score_value_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/story_movie_with_existing2" />

                <TextView
                    android:id="@+id/title_detail_view"
                    android:layout_width="366dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textMultiLine"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/poster_detail_view" />

                <TextView
                    android:id="@+id/overall_rating_movie_with_existing"
                    android:layout_width="146dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/be_vietnam_extrabold"
                    android:text="Overall rating:"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating_movie_with_existing" />

                <ImageButton
                    android:id="@+id/likeButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:background="#6F0000"
                    app:layout_constraintStart_toEndOf="@+id/rated_detail_durationTime"
                    app:layout_constraintTop_toBottomOf="@+id/title_detail_view"
                    app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

                <ImageButton
                    android:id="@+id/edit_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="26dp"
                    android:background="#6F0000"
                    app:layout_constraintStart_toEndOf="@+id/rating_movie_with_existing"
                    app:layout_constraintTop_toBottomOf="@+id/likeButton2"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

                <ImageButton
                    android:id="@+id/backButton_existing_movie"
                    android:layout_width="88dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>