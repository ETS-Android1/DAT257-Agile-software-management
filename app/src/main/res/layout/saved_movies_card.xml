<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_serie_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#6F0000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6F0000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <ImageView
                android:id="@+id/poster_saved_card_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <RatingBar
                android:id="@+id/rating_bar_card"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/poster_saved_card_img" />

            <TextView
                android:id="@+id/saved_movie_card_title"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_bar_card"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="83dp"
                android:layout_toEndOf="@+id/poster_saved_card_img"
                android:text="TextView"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/description_card"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/saved_movie_card_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/poster_saved_card_img"
                android:text="TextView"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>